
<%= simple_form_for(@enquiry) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :message %>
    <%= f.input :source %>
    <%= f.input :listing_make %>
    <%= f.input :listing_model %>
    <%= f.input :listing_year %>
    <%= f.input :listing_colour %>
    <%= f.input :listing_url %>
    <%= f.input :listing_reference %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
