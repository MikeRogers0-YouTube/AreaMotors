<header class="row mb-5">
  <div class="col-12 col-md-6">
    <h2>Customer <small><%= resource.name %></small></h2>
  </div>
</header>


<h3>Customer Details</h3>
<dl class="row">
  <% %i[name email].each do |field| %>
    <dt class="col-sm-3"><%= Customer.human_attribute_name(field) %></dt>
    <dd class="col-sm-9"><%= resource.send(field) %></dd>
  <% end %>
</dl>

<h3>Notes</h3>

<% resource.customer_notes.each do |customer_note| %>
  <%= customer_note %>
  <hr />
<% end %>

<%= render 'customer_notes/form', customer: resource %>
